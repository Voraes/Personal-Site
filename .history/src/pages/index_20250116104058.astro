---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import TechStack from "../components/TechStack.astro";
import Hero from "../components/Hero.astro";
import LatestPosts from "../components/LatestPosts.astro";
---

<Layout title="Victor Mendes | Software Engineer">
	<main>
		<Hero />
		
		<div class="container">
			<section id="about" class="section">
				<div class="section-header">
					<h2>About</h2>
					<div class="section-line"></div>
				</div>
				<p class="section-content">
					I'm a passionate software engineer with expertise in building scalable web applications.
					With 5+ years of experience in full-stack development, I focus on creating efficient,
					maintainable, and user-friendly solutions that solve real-world problems.
				</p>
			</section>

			<section id="latest-writings" class="section">
				<div class="section-header">
					<h2>Latest Writings</h2>
					<div class="section-line"></div>
				</div>
				<LatestPosts />
			</section>

			<section id="projects" class="section">
				<div class="section-header">
					<h2>Featured Projects</h2>
					<div class="section-line"></div>
				</div>
				<div class="project-grid">
					<ProjectCard
						title="E-Commerce Platform"
						description="A full-stack e-commerce solution built with Next.js and Node.js"
						tags={['React', 'Node.js', 'PostgreSQL']}
						github="https://github.com/username/project"
						demo="https://demo-link.com"
					/>
					<ProjectCard
						title="AI Chat Application"
						description="Real-time chat application with AI-powered responses"
						tags={['Python', 'TensorFlow', 'WebSocket']}
						github="https://github.com/username/project"
						demo="https://demo-link.com"
					/>
					<ProjectCard
						title="Task Management System"
						description="Collaborative task management tool for remote teams"
						tags={['Vue.js', 'Firebase', 'Tailwind']}
						github="https://github.com/username/project"
						demo="https://demo-link.com"
					/>
				</div>
			</section>

			<section id="skills" class="section">
				<div class="section-header">
					<h2>Tech Stack</h2>
					<div class="section-line"></div>
				</div>
				<TechStack />
			</section>

			<section id="contact" class="footer">
				<div class="section-header">
					<h2>Contact</h2>
					<div class="section-line"></div>
				</div>
				<div class="contact-links">
					<a href="mailto:hello@example.com" class="contact-button">
						<span class="contact-icon">‚úâÔ∏è</span>
						<span>Email</span>
					</a>
					<a href="https://github.com/username" class="contact-button">
						<span class="contact-icon">üêô</span>
						<span>GitHub</span>
					</a>
					<a href="https://linkedin.com/in/username" class="contact-button">
						<span class="contact-icon">üíº</span>
						<span>LinkedIn</span>
					</a>
				</div>
			</section>
		</div>
	</main>
</Layout>

<style>
	.container {
		margin: 0 auto;
		padding: 0 1.5rem;
		max-width: 1200px;
	}

	.section {
		margin: 8rem 0;
	}

	.section-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 3rem;
	}

	h2 {
		font-size: 1.5rem;
		font-weight: 600;
		color: var(--foreground);
		white-space: nowrap;
	}

	.section-line {
		height: 1px;
		background: var(--border);
		width: 100%;
	}

	.section-content {
		font-size: 1.125rem;
		line-height: 1.8;
		color: var(--text-secondary);
		max-width: 1000px;
	}

	.project-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.contact-links {
		display: flex;
		gap: 1.5rem;
		justify-content: flex-start;
		margin-top: 2rem;
	}

	.contact-button {
		background: var(--secondary);
		color: var(--foreground);
		padding: 1rem 1.5rem;
		border-radius: 12px;
		text-decoration: none;
		transition: all 0.3s ease;
		border: 2px solid var(--border);
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.contact-icon {
		font-size: 1.25rem;
	}

	.contact-button:hover {
		border-color: rgb(var(--accent));
		transform: translateY(-2px);
	}

	@media (max-width: 768px) {
		.section {
			margin: 6rem 0;
		}

		.project-grid {
			grid-template-columns: 1fr;
		}

		.contact-links {
			flex-direction: column;
		}

		.contact-button {
			width: 100%;
			justify-content: center;
		}
	}

	.footer {
  background-color: #1c1c1c;
  border-top: 1px solid #2c2c2c;
  padding: 2rem 0;
  margin-top: 4rem;
}

.footer-container {
  max-width: 72rem;
  margin: 0 auto;
  padding: 0 1rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.footer-logo {
  font-size: 1.5rem;
  font-weight: bold;
  color: #fff;
  margin-bottom: 1rem;
}

.footer-nav {
  display: flex;
  gap: 1.5rem;
  margin-bottom: 1rem;
}

.footer-link {
  color: #9ca3af;
  text-decoration: none;
  transition: color 0.3s ease;
}

.footer-link:hover {
  color: #fff;
}

.footer-social {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
}

.footer-social a {
  color: #9ca3af;
  transition: color 0.3s ease;
}

.footer-social a:hover {
  color: #fff;
}

.footer-copyright {
  color: #6b7280;
  font-size: 0.875rem;
}

@media (min-width: 768px) {
  .footer-container {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .footer-left, .footer-right {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .footer-logo {
    margin-bottom: 0;
  }

  .footer-nav, .footer-social {
    margin-bottom: 0;
  }
}


</style>