<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .text-left {
    text-align: left;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .list-item {
    padding-bottom: 0.875rem;
    padding-left: 0.125rem;
  }

  .blog-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .blog-header p {
    color: var(--text-secondary);
    font-size: 1.2rem;
  }

  .back {
    color: rgb(var(--accent-light));
    margin-bottom: 40px;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
    transition: transform 0.3s ease;
  }
  

  .back:hover {
    transform: translateX(-4px);
  }

  .arrow {
    transition: transform 0.3s ease;
  }

  .read-more:hover .arrow {
    transform: translateX(4px);
  }

 a {
    color: rgb(var(--accent-light));;
 }

  .link-color :global(a:hover) {
    color: var(--foreground);
    transition: all 0.3s ease;
  }
</style>