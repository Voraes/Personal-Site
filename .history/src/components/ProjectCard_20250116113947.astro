---
interface Props {
	title: string;
	description: string;
	tags: string[];
	github: string;
	demo: string;
}

const { title, description, tags, github, demo } = Astro.props;
---

<div class="project-card">
	<h3>{title}</h3>
	<p>{description}</p>
	<div class="tags">
		{tags.map((tag) => <span class="tag">{tag}</span>)}
	</div>
	<div class="links">
		<a href={github} target="_blank" rel="noopener noreferrer" class="link-button">
			<span>GitHub</span>
			<span class="arrow">→</span>
		</a>
		<a href={demo} target="_blank" rel="noopener noreferrer" class="link-button">
			<span>Live Demo</span>
			<span class="arrow">→</span>
		</a>
	</div>
</div>

<style>
	.project-card {
		background: var(--secondary);
		border-radius: 16px;
		padding: 2rem;
		transition: all 0.3s ease;
		border: 2px solid var(--border);
		height: 100%;
		display: flex;
		flex-direction: column;
	}

	.project-card:hover {
		transform: translateY(-4px);
		border-color: rgb(var(--accent));
	}

	h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: var(--foreground);
		font-weight: 600;
	}

	p {
		color: var(--text-secondary);
		margin-bottom: 1.5rem;
		line-height: 1.6;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 2rem;
	}

	.tag {
		background: rgba(var(--accent), 0.1);
		color: rgb(var(--accent-light));
		padding: 0.4rem 0.8rem;
		border-radius: 20px;
		font-size: 0.875rem;
		font-weight: 500;
	}

	.links {
		display: flex;
		gap: 1rem;
		margin-top: auto;
	}

	.link-button {
		color: var(--foreground);
		text-decoration: none;
		font-size: 0.875rem;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.arrow {
		transition: transform 0.3s ease;
	}

	.link-button:hover .arrow {
		transform: translateX(4px);
	}
</style>